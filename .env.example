# ============================================
# Application Configuration
# ============================================
APP_NAME="Backoffice Service"
APP_VERSION="1.0.0"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080

# ============================================
# Server Configuration
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
GIN_MODE=debug

# Server Timeouts (in seconds)
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s

# ============================================
# Primary Database Configuration
# ============================================
# Database driver: postgresql, mysql, mongodb, sqlite
DB_DRIVER=postgresql

# Database connection settings
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=backoffice

# PostgreSQL specific settings
DB_SSLMODE=disable
# Options: disable, allow, prefer, require, verify-ca, verify-full

# MySQL specific settings
DB_CHARSET=utf8mb4
# Options: utf8, utf8mb4, latin1, etc.

# Database Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=10m

# Use GORM ORM (true/false)
# Set to true to use GORM, false to use raw SQL
DB_USE_GORM=true

# ============================================
# Secondary Database (Optional)
# ============================================
# To use multiple databases, configure them in the Databases map
# Example for secondary database:
# DB_SECONDARY_DRIVER=mysql
# DB_SECONDARY_HOST=127.0.0.1
# DB_SECONDARY_PORT=3306
# DB_SECONDARY_USER=root
# DB_SECONDARY_PASSWORD=your_password
# DB_SECONDARY_DBNAME=analytics
# DB_SECONDARY_CHARSET=utf8mb4
# DB_SECONDARY_SSLMODE=disable
# DB_SECONDARY_MAX_OPEN_CONNS=25
# DB_SECONDARY_MAX_IDLE_CONNS=5
# DB_SECONDARY_CONN_MAX_LIFETIME=5m
# DB_SECONDARY_CONN_MAX_IDLE_TIME=10m
# DB_SECONDARY_USE_GORM=true

# ============================================
# JWT Authentication Configuration
# ============================================
JWT_SECRET=your-secret-key-change-in-production-min-32-characters-long
JWT_EXPIRATION=24h
JWT_ISSUER=backoffice-service

# ============================================
# Redis Configuration (Optional)
# ============================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# ============================================
# Email Configuration (Optional)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# File Storage Configuration (Optional)
# ============================================
FILESYSTEM_DISK=local
# FILESYSTEM_DISK=s3

# Local Storage
STORAGE_PATH=./storage/app

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_ENDPOINT=

# Azure Blob Storage Configuration
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_STORAGE_CONTAINER=

# ============================================
# Message Queue Configuration (Optional)
# ============================================
QUEUE_CONNECTION=sync
# QUEUE_CONNECTION=redis
# QUEUE_CONNECTION=database

# Redis Queue
REDIS_QUEUE=default

# RabbitMQ Configuration
RABBITMQ_HOST=127.0.0.1
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Kafka Configuration
KAFKA_BROKERS=127.0.0.1:9092
KAFKA_GROUP_ID=backoffice-service
KAFKA_TOPIC_PREFIX=backoffice

# ============================================
# Logging Configuration
# ============================================
# Logger output channel: stdout, file, or stack (both stdout and file)
LOG_CHANNEL=stdout
# LOG_CHANNEL=file
# LOG_CHANNEL=stack

# Log level: debug, info, warn, error
LOG_LEVEL=debug
# LOG_LEVEL=info
# LOG_LEVEL=warn
# LOG_LEVEL=error

# Log file path (directory where log files will be stored)
LOG_FILE_PATH=./storage/logs

# Log file base name (without extension)
LOG_FILE_NAME=app

# Log rotation mode: daily (creates app-2024-01-15.log) or single (creates app.log)
# Set to true for daily-based files (app-YYYY-MM-DD.log)
# Set to false for single file (app.log) with size-based rotation
LOG_DAILY_ROTATE=true
# LOG_DAILY_ROTATE=false

# Maximum size in MB before rotation (only for single file mode or size-based rotation)
LOG_MAX_SIZE=10

# Maximum number of old log files to retain
LOG_MAX_BACKUPS=5

# Maximum number of days to retain old log files
LOG_MAX_AGE=28

# Whether to compress rotated log files
LOG_COMPRESS=true
# LOG_COMPRESS=false

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# ============================================
# Rate Limiting Configuration
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW=1m

# ============================================
# Cache Configuration
# ============================================
CACHE_DRIVER=memory
# CACHE_DRIVER=redis
# CACHE_DRIVER=file

CACHE_PREFIX=backoffice_cache
CACHE_TTL=3600

# ============================================
# Session Configuration
# ============================================
SESSION_DRIVER=memory
# SESSION_DRIVER=redis
# SESSION_DRIVER=cookie

SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=

# ============================================
# API Configuration
# ============================================
API_PREFIX=/api/v1
API_RATE_LIMIT=60

# ============================================
# Third-Party Services (Optional)
# ============================================

# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# New Relic APM
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME="${APP_NAME}"

# ============================================
# Development/Testing
# ============================================
# Set to true to enable debug mode
DEBUG=true

# Seed database on startup (development only)
DB_SEED=false

# Run migrations on startup
DB_MIGRATE=false